<web-app>
    <display-name>Currency Exchange</display-name>

    <servlet>
        <servlet-name>CurrencyServlet</servlet-name>
        <servlet-class>com.example.servlet.CurrencyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CurrencyServlet</servlet-name>
        <url-pattern>/currencies</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CurrencyExchangeServlet</servlet-name>
        <servlet-class>com.example.servlet.CurrencyExchangeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CurrencyExchangeServlet</servlet-name>
        <url-pattern>/currency/*</url-pattern>
    </servlet-mapping>
</web-app>
